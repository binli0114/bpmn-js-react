{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    // Ensure typeRoots points to your type definitions correctly
    "typeRoots": ["./node_modules/@types", "./src/types"],
    // Adjust this if your global types are somewhere else
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/types/**/*" // Make sure this includes the path to your global types if different
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
